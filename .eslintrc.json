{
  "extends": [
    "next/core-web-vitals",
    "standard-with-typescript",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "prettier/prettier": 2,
    "arrow-body-style": ["error", "as-needed"],
    "@typescript-eslint/strict-boolean-expressions": ["error", {
      "allowNullableBoolean": true
    }]
  }
}
